---
import Layout from '../layouts/Layout.astro';
import Darkmode from '../components/Darkmode.jsx';
---

<Layout currentPage="home">
	<!-- Hero Section -->
	<section class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 flex items-center justify-center relative transition-colors duration-300">
		<div class="container mx-auto px-6 text-center">
			<div class="max-w-4xl mx-auto">
				<!-- Main Heading -->
				<h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6 font-mono">
					Hello Worldss!
				</h1>
				
				<!-- Subheading -->
				<p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
					Welcome to my digital workspace where <span class="text-blue-600 dark:text-blue-400 font-semibold">engineering</span>, 
					<span class="text-purple-600 dark:text-purple-400 font-semibold">physics</span>, and 
					<span class="text-green-600 dark:text-green-400 font-semibold">innovation</span> converge.
				</p>

				<!-- Status Badge -->
				<div class="inline-flex items-center bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-4 py-2 rounded-full text-sm font-medium mb-8">
					<span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
					Currently: Undergraduate Student | Physics & Engineering
				</div>

				<!-- CTA Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
					<a href="/projects" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
						Explore Projects
					</a>
					<a href="/about" class="bg-white dark:bg-gray-800 text-gray-900 dark:text-white border-2 border-gray-300 dark:border-gray-600 hover:border-blue-500 dark:hover:border-blue-400 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
						About Me
					</a>
				</div>

				<!-- Quick Stats -->
				<div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-2xl mx-auto">
					<div class="text-center">
						<div class="text-2xl font-bold text-gray-900 dark:text-white">5+</div>
						<div class="text-sm text-gray-600 dark:text-gray-400">Projects</div>
					</div>
					<div class="text-center">
						<div class="text-2xl font-bold text-gray-900 dark:text-white">2</div>
						<div class="text-sm text-gray-600 dark:text-gray-400">Majors</div>
					</div>
					<div class="text-center">
						<div class="text-2xl font-bold text-gray-900 dark:text-white">âˆž</div>
						<div class="text-sm text-gray-600 dark:text-gray-400">Curiosity</div>
					</div>
					<div class="text-center">
						<div class="text-2xl font-bold text-gray-900 dark:text-white">24/7</div>
						<div class="text-sm text-gray-600 dark:text-gray-400">Learning</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Scroll Indicator -->
		<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
			<svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
			</svg>
		</div>
	</section>

	<!-- Site Overview Section -->
	<section class="py-16 bg-white dark:bg-gray-900 transition-colors duration-300">
		<div class="container mx-auto px-6">
			<div class="max-w-4xl mx-auto">
			<!-- Featured Projects -->
			<div class="text-center">
				<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Featured Projects</h3>
				<div class="grid md:grid-cols-2 gap-4">
					<a href="/projects/automotive-simulation" class="block p-4 bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-lg hover:shadow-md transition-all">
						<div class="text-left">
							<h4 class="font-semibold text-gray-900 dark:text-white">Automotive Simulation</h4>
							<p class="text-sm text-gray-600 dark:text-gray-400">Performance modeling and analysis</p>
						</div>
					</a>
					<a href="/projects/mechanical-design" class="block p-4 bg-gradient-to-r from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 rounded-lg hover:shadow-md transition-all">
						<div class="text-left">
							<h4 class="font-semibold text-gray-900 dark:text-white">Mechanical Design</h4>
							<p class="text-sm text-gray-600 dark:text-gray-400">CAD and engineering solutions</p>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
</Layout>
